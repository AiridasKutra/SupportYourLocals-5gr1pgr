<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:map="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/map"
>
    <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content" android:id="@+id/header" android:text="Log in"
            android:textSize="36sp" map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintEnd_toEndOf="parent" map:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="name@email.com"
            android:ems="10"
            android:id="@+id/emailTextBox"
            map:layout_constraintTop_toBottomOf="@+id/header"
            android:layout_marginTop="68dp" map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent" map:layout_constraintHorizontal_bias="0.666"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emailLabel"
            android:textAlignment="textEnd" android:textSize="18sp"
            map:layout_constraintEnd_toStartOf="@+id/emailTextBox"
            map:layout_constraintStart_toStartOf="parent" map:layout_constraintTop_toBottomOf="@+id/header"
            android:layout_marginTop="76dp" map:layout_constraintHorizontal_bias="0.738"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emailLabel2"
            android:textAlignment="textEnd" android:textSize="18sp"
            map:layout_constraintEnd_toStartOf="@+id/emailTextBox"
            map:layout_constraintStart_toStartOf="parent" map:layout_constraintTop_toBottomOf="@+id/emailLabel"
            map:layout_constraintHorizontal_bias="0.551" android:layout_marginTop="64dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox"
            map:layout_constraintTop_toBottomOf="@+id/emailTextBox" map:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintHorizontal_bias="0.666" android:hint="password"/>
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginButton"
            android:textColor="#747474" android:backgroundTint="#6DA887"
            android:layout_marginTop="36dp" map:layout_constraintTop_toBottomOf="@+id/passwordTextBox"
            map:layout_constraintStart_toStartOf="parent" map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.795"/>
    <CheckBox
            android:text="Stay logged in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/stayLoggedInCheckBox"
            map:layout_constraintEnd_toStartOf="@+id/loginButton" map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/loginButton"
            map:layout_constraintBottom_toBottomOf="@+id/loginButton" map:layout_constraintHorizontal_bias="0.897"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signUpHeader"
            android:text="Dont' have an account? Create one."
            android:layout_marginTop="98dp" map:layout_constraintTop_toBottomOf="@+id/stayLoggedInCheckBox"
            map:layout_constraintStart_toStartOf="parent" map:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Sign up"
            android:layout_width="88dp"
            android:layout_height="42dp" android:id="@+id/signUpButton"
            android:backgroundTint="#6DA887" android:textColor="#747474"
            map:layout_constraintBottom_toBottomOf="parent" map:layout_constraintTop_toBottomOf="@+id/signUpHeader"
            map:layout_constraintVertical_bias="0.121" map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" map:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>