<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
    android:background="@drawable/popup_back">

    <TextView
            android:text="Change password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:textColor="#747474" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.15"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newPasswordTextBox"
            android:hint="New password" android:textColor="#747474"
            app:layout_constraintEnd_toEndOf="@+id/header" app:layout_constraintStart_toStartOf="@+id/header"
            app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="25dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newPasswordRepeatTextBox"
            app:layout_constraintStart_toStartOf="@+id/newPasswordTextBox"
            app:layout_constraintEnd_toEndOf="@+id/newPasswordTextBox"
            app:layout_constraintTop_toBottomOf="@+id/newPasswordTextBox" android:layout_marginTop="20dp"
            android:hint="Repeat new password" android:textColor="#747474"/>
    <Button
            android:text="Change"
            android:layout_width="100dp"
            android:layout_height="35dp" android:id="@+id/changePasswordButton"
            app:layout_constraintEnd_toEndOf="@+id/newPasswordRepeatTextBox"
            app:layout_constraintStart_toStartOf="@+id/newPasswordRepeatTextBox"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/newPasswordRepeatTextBox" android:textColor="#FFFFFF"
            android:background="#6DA887"/>
</androidx.constraintlayout.widget.ConstraintLayout>