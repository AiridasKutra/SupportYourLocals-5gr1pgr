<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Report this event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp" android:textColor="#747474" android:textSize="30sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/reportNameTextBox"
            app:layout_constraintTop_toBottomOf="@+id/header" app:layout_constraintEnd_toEndOf="@+id/header"
            app:layout_constraintStart_toStartOf="@+id/header" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.515" android:hint="Report reason" android:textSize="14sp"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="105dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/reportContextTextBox"
            app:layout_constraintEnd_toEndOf="@+id/reportNameTextBox"
            app:layout_constraintStart_toStartOf="@+id/reportNameTextBox" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/reportNameTextBox" android:hint="Additional comments"
            android:textSize="12sp"/>
    <Button
            android:text="Report"
            android:layout_width="100dp"
            android:layout_height="35dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="@+id/reportContextTextBox"
            app:layout_constraintStart_toStartOf="@+id/reportContextTextBox"
            app:layout_constraintTop_toBottomOf="@+id/reportContextTextBox" android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" android:background="#6DA887"/>
</androidx.constraintlayout.widget.ConstraintLayout>