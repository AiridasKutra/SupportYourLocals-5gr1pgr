<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:outlineProvider="bounds">

    <TextView
            android:text="Register for a new account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            android:textColor="#747474" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="116dp"/>
    <View
            android:layout_width="300dp"
            android:layout_height="270dp" android:id="@+id/platformView"
            app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:outlineProvider="bounds" android:elevation="4dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signupEmailTextBox"
            android:hint="Email"
            app:layout_constraintEnd_toEndOf="@+id/platformView" app:layout_constraintStart_toStartOf="@+id/platformView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toTopOf="@+id/platformView"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signupUsernameTextBox"
            android:hint="Username"
            app:layout_constraintTop_toBottomOf="@+id/signupEmailTextBox"
            app:layout_constraintEnd_toEndOf="@+id/platformView" app:layout_constraintStart_toStartOf="@+id/platformView"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signupPasswordTextBox"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/signupUsernameTextBox"
            app:layout_constraintEnd_toEndOf="@+id/platformView" app:layout_constraintStart_toStartOf="@+id/platformView"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signupPasswordRepeatTextBox"
            android:hint="Repeat password"
            app:layout_constraintTop_toBottomOf="@+id/signupPasswordTextBox"
            app:layout_constraintEnd_toEndOf="@+id/platformView" app:layout_constraintStart_toStartOf="@+id/platformView"
            app:layout_constraintHorizontal_bias="0.5"/>/>
    <Button
            android:text="Sign up"
            android:layout_width="100dp"
            android:layout_height="35dp" android:id="@+id/signUpButton"
            android:background="#6DA887" android:textColor="@color/buttonFont"
            app:layout_constraintTop_toBottomOf="@+id/signupPasswordRepeatTextBox" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/platformView" app:layout_constraintEnd_toEndOf="@+id/platformView"
            app:layout_constraintVertical_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>