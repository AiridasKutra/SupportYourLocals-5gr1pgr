<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:outlineProvider="bounds">

    <TextView
            android:text="Register for a new account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            android:textColor="#747474" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="116dp"/>
    <View
            android:layout_width="313dp"
            android:layout_height="297dp" android:id="@+id/platformView"
            app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.114"
            android:outlineProvider="bounds" android:elevation="4dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextBox"
            android:hint="Email" app:layout_constraintEnd_toEndOf="@+id/platformView" android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="@+id/platformView" android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/platformView"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameTextBox"
            android:hint="Username"
            app:layout_constraintTop_toBottomOf="@+id/emailTextBox" app:layout_constraintStart_toStartOf="@+id/platformView"
            android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="@+id/platformView" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBow"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextBox" app:layout_constraintEnd_toEndOf="@+id/platformView"
            android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="@+id/platformView"
            android:layout_marginStart="50dp" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordRepeatTextBox"
            android:hint="Repeat password"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBow" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="@+id/platformView" app:layout_constraintStart_toStartOf="@+id/platformView"
            android:layout_marginStart="50dp" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Sign up"
            android:layout_width="103dp"
            android:layout_height="33dp" android:id="@+id/signUpButton"
            app:layout_constraintBottom_toBottomOf="@+id/platformView"
            android:layout_marginBottom="12dp" app:layout_constraintStart_toStartOf="@+id/platformView"
            android:layout_marginStart="107dp" android:layout_marginEnd="108dp"
            app:layout_constraintEnd_toEndOf="@+id/platformView"
            app:layout_constraintTop_toBottomOf="@+id/passwordRepeatTextBox" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:background="#6DA887" android:textColor="#747474"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultLabel"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintBottom_toTopOf="@+id/platformView" app:layout_constraintVertical_bias="0.536"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>