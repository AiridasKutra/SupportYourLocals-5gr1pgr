<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="@drawable/back_warning">

    <TextView
            android:text="Delete account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            android:textColor="#747474" android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.15"/>
    <EditText
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
        
            android:hint="WORD PLACEHOLDER"
            app:layout_constraintTop_toBottomOf="@+id/header" app:layout_constraintStart_toStartOf="@+id/header"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="@+id/header"/>
    <Button
            android:text="Delete"
            android:layout_width="100dp"
            android:layout_height="35dp" android:id="@+id/deleteButton"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:background="#F85A5A"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>