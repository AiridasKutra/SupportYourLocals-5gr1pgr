<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standart_12">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_narrow"
            android:orientation="vertical"
            android:padding="1dp">
            <ImageView
                android:id="@+id/MainEventImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/MainEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainEventImage"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:text="event name"/>
            <TextView
                android:id="@+id/MainEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainEventName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:text="event date and time"/>
            <TextView
                android:id="@+id/MainEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MainEventDate"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="event description"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>