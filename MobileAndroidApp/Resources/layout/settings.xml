<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <View
            android:layout_width="400dp"
            android:layout_height="60dp" android:id="@+id/deleteAccountPlatform"
            android:outlineProvider="bounds" android:background="@drawable/back_narrow"
            app:layout_constraintEnd_toEndOf="@+id/changeLocationPlatform"
            app:layout_constraintStart_toStartOf="@+id/changeLocationPlatform"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>
    <View
            android:layout_width="400dp"
            android:layout_height="60dp" android:id="@+id/changeLocationPlatform"
            app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginStart="50dp"
            android:outlineProvider="bounds" android:background="@drawable/back_narrow"
            app:layout_constraintBottom_toTopOf="@+id/changePasswordPlatform"/>
    <View
            android:layout_width="400dp"
            android:layout_height="60dp" android:id="@+id/changePasswordPlatform"
        android:translationY="-1dp"
            android:outlineProvider="bounds" android:background="@drawable/back_narrow"
            app:layout_constraintTop_toBottomOf="@+id/changeLocationPlatform"
            app:layout_constraintEnd_toEndOf="@+id/changeLocationPlatform"
            app:layout_constraintStart_toStartOf="@+id/changeLocationPlatform"/>
    <TextView
            android:text="User settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            android:textSize="36sp" android:textColor="#747474"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Change location manually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changeLocationLabel"
            app:layout_constraintStart_toStartOf="@+id/changeLocationPlatform" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/changeLocationPlatform" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/changeLocationPlatform" android:layout_marginBottom="20dp"
            android:textColor="#747474" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/chevron_right" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/changeLocationPlatform"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/changeLocationPlatform"
            app:layout_constraintBottom_toBottomOf="@+id/changeLocationPlatform" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="Change password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/changePasswordLabel"
            app:layout_constraintStart_toStartOf="@+id/changePasswordPlatform" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/changePasswordPlatform" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/changePasswordPlatform" android:layout_marginBottom="20dp"
            android:textColor="#747474" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/chevron_right" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/changePasswordPlatform"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/changePasswordPlatform"
            app:layout_constraintBottom_toBottomOf="@+id/changePasswordPlatform" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="Delete account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deleteAccountLabel"
            app:layout_constraintStart_toStartOf="@+id/deleteAccountPlatform" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/deleteAccountPlatform" android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/deleteAccountPlatform" android:layout_marginBottom="20dp"
            android:textColor="#747474" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/chevron_right" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/deleteAccountPlatform"
            android:layout_marginTop="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@+id/deleteAccountPlatform"
            app:layout_constraintBottom_toBottomOf="@+id/deleteAccountPlatform" android:layout_marginBottom="20dp"/>
<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/arrow1"
            android:background="@drawable/chevron_right"
            app:layout_constraintTop_toTopOf="@+id/changeLocationLabel"
            app:layout_constraintBottom_toBottomOf="@+id/changeLocationLabel"
            app:layout_constraintEnd_toEndOf="@+id/changeLocationPlatform" android:layout_marginEnd="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/arrow2"
            android:background="@drawable/chevron_right"
            app:layout_constraintTop_toTopOf="@id/changePasswordLabel"
            app:layout_constraintBottom_toBottomOf="@+id/changePasswordLabel"
            app:layout_constraintEnd_toEndOf="@+id/changePasswordPlatform" android:layout_marginEnd="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/arrow3"
            android:background="@drawable/chevron_right"
            app:layout_constraintTop_toTopOf="@id/deleteAccountLabel"
            app:layout_constraintBottom_toBottomOf="@id/deleteAccountLabel"
            app:layout_constraintEnd_toEndOf="@+id/deleteAccountPlatform" android:layout_marginEnd="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>