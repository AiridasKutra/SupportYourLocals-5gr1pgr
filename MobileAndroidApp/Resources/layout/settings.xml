<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="User settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/header"
            android:textSize="36sp" android:textColor="#747474"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Change location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/locationLabel"
            app:layout_constraintTop_toBottomOf="@+id/header" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp" android:layout_marginStart="32dp" android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/button" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Change password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/passwordLabel"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationLabel" android:layout_marginTop="56dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Delete account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deleteLabel"
            android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changePasswordButton" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.551"/>
    <Button
            android:text="Get location"
            android:layout_width="108dp"
            android:layout_height="43dp" android:id="@+id/button"
            android:textColor="#747474" android:background="#6DA887"
            app:layout_constraintTop_toBottomOf="@+id/header" android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Change"
            android:layout_width="108dp"
            android:layout_height="43dp" android:id="@+id/changePasswordButton"
            android:textColor="#747474" android:background="#6DA887"
            app:layout_constraintTop_toBottomOf="@+id/repeatPasswordTextBox" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Change"
            android:layout_width="108dp"
            android:layout_height="43dp" android:id="@+id/changePasswordButton2"
            android:textColor="#747474" android:background="#6DA887"
            app:layout_constraintTop_toBottomOf="@+id/repeatPasswordTextBox" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Delete"
            android:layout_width="108dp"
            android:layout_height="43dp" android:id="@+id/changePasswordButton3"
            android:textColor="#747474" android:background="#F85A5A"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox"
            app:layout_constraintStart_toEndOf="@+id/passwordLabel" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.512" android:hint="new password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/repeatPasswordTextBox"
            app:layout_constraintStart_toEndOf="@+id/passwordLabel" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBox" android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.512" android:hint="repeat new password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword3"
            app:layout_constraintTop_toBottomOf="@+id/changePasswordButton"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:hint="password"/>
</androidx.constraintlayout.widget.ConstraintLayout>